{
    "compilerOptions": {
        "outDir": "./lib/",
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": false,
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": ["node", "jest"],
    },
    "include": [
        "./src/**/*.ts"
    ]
}